{% extends '_default/list.html.twig' %}

        {%- block content ~%}
          <div class="posts">
            <span>Vidéos</span>
            {%- for page_video in pages|sort_by_date ~%}
            <div class="post">
              <h1 class="post-title"><a href="{{ url(page_video) }}">{{~ page_video.title ~}}</a></h1>
              <a href="{{ url(page_video) }}" class="video" title="{{ page_video.title }}">
                <div class="play-btn">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 311.69 311.69"><path d="M155.84,0A155.85,155.85,0,1,0,311.69,155.84,155.84,155.84,0,0,0,155.84,0Zm0,296.42A140.58,140.58,0,1,1,296.42,155.84,140.58,140.58,0,0,1,155.84,296.42Z"/><polygon points="218.79 155.84 119.22 94.34 119.22 217.34 218.79 155.84"/></svg>
                </div>
                <img src="{{ asset(page_video.poster) }}" />
              </a>
              <blockquote>{{ page_video.description }}</blockquote>
              <footer class="readmore">
                <a href="{{ url(page_video) }}">Voir la vidéo ›</a>
              </footer>
            </div>
            {%- endfor ~%}
          </div>
        {%- endblock content ~%}