{% extends '_default/list.html.twig' %}

        {%- block content ~%}
          <div class="posts">
            <span>Vidéos</span>
            <blockquote>{{ page.description }}</blockquote>
            {%- for page_video in pages|sort_by_date ~%}
            <div class="post">
              <h1 class="post-title"><a href="{{ url(page_video) }}">{{ page_video.title }}</a></h1>
              <span class="post-date">{{ page_video.date|format_date('long') }}</span>
              <span class="post-readtime"> &middot; <svg width="16" height="16" class="icon icon-clock"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-clock"></use></svg> {{ asset(page_video.videos[0]).video.duration|round(0, 'floor') }} s</span>
              {#-
              <a href="{{ url(page_video) }}" class="video" title="{{ page_video.title }}">
                <div class="play-btn">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6"><path fill-rule="evenodd" d="M4.5 5.653c0-1.427 1.529-2.33 2.779-1.643l11.54 6.347c1.295.712 1.295 2.573 0 3.286L7.28 19.99c-1.25.687-2.779-.217-2.779-1.643V5.653Z" clip-rule="evenodd" /></svg>
                </div>
                {{- html(asset(page_video.image)) ~}}
              </a>
              ~#}
              {{- include('partials/player.html.twig', {page: page_video}, with_context = false) ~}}
              <blockquote>{{ page_video.description }}</blockquote>
              <footer class="readmore">
                <a href="{{ url(page_video) }}">Voir la page de la vidéo ›</a>
              </footer>
            </div>
            {%- endfor ~%}
          </div>
        {%- endblock content ~%}