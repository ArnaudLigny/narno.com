      <script type="application/ld+json">
        {
          "@context": "http://schema.org",
          "@type": "WebSite",
          "name": "{{ site.title }}",
          "url": "{{ url('/', true) }}",
          "sameAs": [
            "https://twitter.com/{{ site.rs.twitter.username }}",
            "https://github.com/{{ site.rs.github.username }}"
          ]
        }
      </script>
{% if page.section == 'blog' %}
      <script type="application/ld+json">
        {
          "@context": "http://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [{
            "@type": "ListItem",
            "position": 1,
            "item": {
              "@id": "{{ url(page.section) }}",
              "name": "{{ page.section|capitalize }}"
            }
          },{
            "@type": "ListItem",
            "position": 2,
            "item": {
              "@id": "{{ url(page) }}",
              "name": "{{ page.title|escape }}"
            }
          }]
        }
{% endif %}
      </script>
