<div class="posts">
  {% for post in site.pages|filterBy('star', 'true')|sortByDate|slice(0, 1) %}
  <div class="post">
    <h1 class="post-title">
      <a href="{{ url(post) }}">
        {{ post.title }}
      </a>
    </h1>
    <span class="post-date">{{ post.date|date("j M Y") }}</span>
    {{ post.content }}
  </div>
  {% endfor %}
</div>
