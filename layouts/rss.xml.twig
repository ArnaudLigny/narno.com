<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <lastBuildDate>{{ page.date|date('Y-m-dTH:i:sP') }}</lastBuildDate>
    <link>{{ site.baseurl }}</link>
{% for page in site.pages|filterBy('section', 'blog')|sortByDate %}
    <item>
      <title>{{ page.title }}</title>
      <description>{{ page.content|excerpt|striptags }}</description>
      <pubDate>{{ page.date|date('Y-m-dTH:i:sP') }}</pubDate>
      <link>{{ url(page) }}</link>
    </item>
{% endfor %}
  </channel>
</rss>
