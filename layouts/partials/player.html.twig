            {#- video player: autoplay=false, muted=false ~#}
            <!-- video player -->
            <link rel="stylesheet" href="{{ url(asset('plyr/plyr.css'), {canonical: true}) }}" />
            <style>{% apply minify_css ~%}
              video {
                border-radius: 5px;
              }
              :root {
                /*--plyr-color-main: #185886;*/
                --plyr-color-main: rgba(0,0,0,0.6);
                --plyr-control-icon-size: 22px;
                --plyr-video-control-color-hover: #B8C0C2;
              }
              .plyr {
                border-radius: 5px;
                margin: 0 0 2.2rem;
              }
              .plyr__poster {
                background-size: cover;
              }
            {% endapply %}</style>
            <video id="player-{{ page.title|slugify }}" playsinline controls preload="auto" poster="{{ url(asset(page.image)|resize(1280)|webp, {canonical: true}) }}"{% if autoplay ?? false %} autoplay{% endif %}{% if muted ?? false %} muted{% endif %}>
              {%- for video in page.videos ~%}
                {%- set asset = asset(video) ~%}
              <source src="{{ url(asset, {canonical: true}) }}" type="{{ asset.subtype }}"/>
              {%- endfor ~%}
            </video>
            <script src="{{ url(asset('plyr/plyr.js'), {canonical: true}) }}"></script>
            <script>
              const player_{{ page.title|slugify|replace({'-': '_'}) }} = new Plyr('#player-{{ page.title|slugify }}', {
                controls: ['play-large', 'play', 'progress', 'current-time', 'duration', 'mute', 'volume', 'fullscreen']
              });
            </script>
            <!-- /video player -->