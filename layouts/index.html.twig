<!DOCTYPE html>
<html lang="fr-fr">
  {% include 'includes/head.html.twig' %}
  <body>
    {% include 'includes/sidebar.html.twig' %}
    <div class="wrap">
      <div class="masthead">
        <div class="container">
          <h3 class="masthead-title">
            <a href="{{ site.baseurl }}" title="Home">{{ site.title }}</a>
            <small>{{ site.baseline }}</small>
          </h3>
        </div>
      </div>
      <div class="container content">
{% block content %}
{% include 'includes/home.html.twig' %}
{% include 'includes/lastposts.html.twig' %}
{% endblock content %}
      </div>
    </div>
    <label for="sidebar-checkbox" class="sidebar-toggle"></label>
    <script>
      (function(document) {
        var toggle = document.querySelector('.sidebar-toggle');
        var sidebar = document.querySelector('#sidebar');
        var checkbox = document.querySelector('#sidebar-checkbox');
        document.addEventListener('click', function(e) {
          var target = e.target;
          if(!checkbox.checked ||
             sidebar.contains(target) ||
             (target === checkbox || target === toggle)) return;
          checkbox.checked = false;
        }, false);
      })(document);
    </script>
{% if site.debug == true %}
    <pre>
    Layout: {{ _self.getTemplateName() }}
    {{ dump(page) }}
    </pre>
{% endif %}
    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('{{ url("sw.js") }}').then(function(registration) {
          console.log('[SW] Registration successful with scope: ', registration.scope);
        }).catch(function(err) {
          console.log('[SW] Registration failed: ', err);
        });
      }
      navigator.webkitTemporaryStorage.queryUsageAndQuota(
        function(usedBytes, grantedBytes) {
          console.log('Cache size: ', (usedBytes/1048576).toFixed(2), ' / ', (grantedBytes/1048576).toFixed(2), 'Mo');
        },
        function(e) { console.log('Error', e); }
      );
    </script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-387892-1', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
