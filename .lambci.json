{
  "cmd": "chmod +x ./scripts/build-and-deploy.sh && ./scripts/build-and-deploy.sh",
  "branches": {
    "master": {
      "build": true,
      "env": {
        "CECIL_ENV": "production"
      }
    },
    "preview": {
      "build": true,
      "env": {
        "CECIL_ENV": "preview",
        "CECIL_TITLE": "Narno.com (preview)",
        "CECIL_BASEURL": "https://preview.narno.com/",
        "REPOSITORY": "Narno/preview.narno.com",
        "DOMAIN": "preview.narno.com"
      }
    }
  }
}
