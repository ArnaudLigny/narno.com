{% set pages = site.pages.all %}
{% if page.pages is defined %}
{% set pages = page.pages %}
{% endif %}
{% if page.pagination.pages is defined %}
{% set pages = page.pagination.pages %}
{% endif %}

{% extends 'index.html.twig' %}

{% block content %}
<div class="posts">
{% for post in pages|sortByDate %}
  <div class="post">
    <h1 class="post-title">
      <a href="{{ url(post) }}">
        {{ post.title }}
      </a>
    </h1>
    {{ post.content|excerptHtml }}
    <footer class="readmore">
      <a href="{{ url(post) }}">Voir le contenu â€º</a>
    </footer>
  </div>
{% endfor %}
</div>
{% if site.debug == true %}
<pre>
Layout: {{ _self.getTemplateName() }}
</pre>
{% endif %}
{% endblock content %}
