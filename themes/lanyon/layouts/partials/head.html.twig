{% if page.id == "index" %}
{% set title = site.title ~ ' &middot; ' ~ site.baseline %}
{% else %}
{% set title = page.title|e ~ ' &middot; ' ~ site.title %}
{% endif %}
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>{{ title }}</title>
    <meta name="copyright" content="{{ site.author.name }}">
    <meta name="revisit-after" content="1 day">
    <meta property="fb:admins" content="{{ site.rs.facebook.admins }}">
    <meta property="og:site_name" content="{{ site.title }}">
    <meta property="og:locale" content="{{ site.locale }}" />
{% if page.section == 'blog' %}
{% if page.tags is defined %}
    <meta name="keywords" content="{{ page.tags|merge(site.keywords)|join(', ') }}">
{% endif %}
    <meta property="og:type" content="article" />
{% else %}
    <meta name="keywords" content="{{ site.keywords|join(', ') }}">
    <meta property="og:type" content="website" />
{% endif %}
    <meta property="og:url" content="{{ url(page, {canonical:true}) }}">
{% if page.image is defined %}
    <meta property="og:image" content="{{ url(page.image, {canonical:true}) }}">
    <meta name="twitter:image" content="{{ url(page.image, {canonical:true}) }}">
{% else %}
    <meta property="og:image" content="https://gravatar.com/avatar/324fa39cabc600993a68d1aeace25f90?s=300">
{% endif %}
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@{{ site.rs.twitter.username }}">
    <meta property="og:title" content="{{ title }}">
    <meta name="twitter:title" content="{{ title }}">
{% if page.description is defined %}
    <meta name="description" content="{{ page.description|striptags|e|excerpt(165) }}">
    <meta property="og:description" content="{{ page.description|striptags|e|excerpt }}">
    <meta name="twitter:description" content="{{ page.description|striptags|e|excerpt }}">
{% else %}
{% if page.content is not empty %}
    <meta name="description" content="{{ page.content|striptags|e|excerpt(165) }}">
    <meta property="og:description" content="{{ page.content|striptags|e|excerpt }}">
    <meta name="twitter:description" content="{{ page.content|striptags|e|excerpt }}">
{% else %}
    <meta name="description" content="{{ site.description|e }}">
    <meta property="og:description" content="{{ site.description|e }}">
    <meta name="twitter:description" content="{{ site.description|e }}">
{% endif %}
{% endif %}
    <meta name="theme-color" content="{{ site.manifest.theme_color }}">
{% include 'partials/alternates.html.twig' %}
    <link rel="manifest" href="{{ url('manifest') }}">
    <link rel="stylesheet" href="/{{ minify('css/poole.css') }}">
    <link rel="stylesheet" href="/{{ minify('css/syntax.css') }}">
    <link rel="stylesheet" href="/{{ minify('css/lanyon.css') }}">
    <link rel="stylesheet" href="/{{ minify('css/narno.com.css') }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=PT+Serif:400,400italic,700%7CPT+Sans:400">
    <link rel="shortcut icon" href="{{ url('favicon.ico') }}">
    <link rel="icon" sizes="192x192" href="{{ url('icon.png') }}">
    <link rel="apple-touch-icon" href="{{ url('apple-touch-icon.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ url('apple-touch-icon-precomposed.png') }}">
    <link rel="apple-touch-startup-image" href="{{ url('apple-touch-startup-image.png') }}">
    <meta name="msapplication-square310x310logo" content="{{ url('msapplication-square310x310logo.png') }}">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link href="https://twitter.com/{{ site.rs.twitter.username }}" rel="me">
    <link href="https://github.com/{{ site.rs.github.username }}" rel="me">
    <link rel="pingback" href="https://webmention.io/narno.com/xmlrpc">
    <link rel="webmention" href="https://webmention.io/narno.com/webmention">
    <link rel="webmention" href="https://webmention.herokuapp.com/api/webmention">
  </head>
