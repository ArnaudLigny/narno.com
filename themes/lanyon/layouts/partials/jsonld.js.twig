      <script type="application/ld+json">
        {
          "@context": "http://schema.org",
          "@type": "WebSite",
          "name": "{{ site.title }}",
          "url": "{{ url('/', {canonical:true}) }}",
          "sameAs": [
            "https://twitter.com/{{ site.social.twitter.site }}",
            "https://github.com/{{ site.social.github.username }}"
          ]
        }
      </script>
{% if page.section == 'blog' %}
      <script type="application/ld+json">
        {
          "@context": "http://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [{
            "@type": "ListItem",
            "position": 1,
            "item": {
              "@id": "{{ url(page.section) }}",
              "name": "{{ page.section|capitalize }}"
            }
          },{
            "@type": "ListItem",
            "position": 2,
            "item": {
              "@id": "{{ url(page) }}",
              "name": "{{ page.title|escape }}"
            }
          }]
        }
      </script>
      <script type="application/ld+json">
        {
          "@context": "http://schema.org",
          "@type": "NewsArticle",
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "{{ url(page) }}"
          },
          "headline": "{{ page.title|escape }}",
{% if page.image is defined %}
          "image": [
            "{{ url(page.image) }}"
          ],
{% endif %}
          "datePublished": "{{ page.date|date('Y-m-dTH:i:sP') }}",
          "dateModified": "{{ page.date|date('Y-m-dTH:i:sP') }}",
          "author": {
            "@type": "Person",
            "name": "{{ site.author }}"
          },
          "publisher": {
            "@type": "Organization",
            "name": "{{ site.title }}",
            "logo": {
              "@type": "ImageObject",
              "url": "{{ url('icon.png') }}"
            }
          },
          "description": "{{ page.content|striptags|excerpt|escape }}"
        }
      </script>
{% endif %}
